{{yield (hash
  object=object
  propertyName=propertyName

  do-label=(component labelComponent
    for=controlId
  )

  do-control=(component controlComponent
    value=(get object propertyName)
    id=controlId
    controlName=controlName
    validationClass=controlValidationClasses
    update=(action 'onUpdate' object propertyName)
  )

  do-feedback=(component feedbackComponent
    message=errorMessage
    showFeedback=showValidation
  )

  do-hint=(component hintComponent)
)}}